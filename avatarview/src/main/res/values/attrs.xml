<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AvatarView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
        <attr name="src" format="reference"/>
        <attr name="placeholder" format="reference"/>
        <attr name="errorDrawable" format="reference"/>
        <attr name="displayType" format="enum">
            <enum name="circle" value="0"/>
            <enum name="rect" value="1"/>
            <enum name="round_rect" value="2"/>
            <enum name="star_frame" value="3"/>
            <enum name="oval" value="4"/>
        </attr>
        <attr name="scaleType" format="enum">
            <enum name="center_inside" value="0"/>
            <enum name="fix_XY" value="1"/>
            <enum name="center_crop" value="2"/>
        </attr>
    </declare-styleable>

</resources>